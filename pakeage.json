{
    "name": "social-fullstack",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
      "client",
      "server"
    ],
    "scripts": {
      "install-all": "npm install --workspaces --include-workspace-root",
      "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
      "build": "npm run build --workspace=client",
      "start": "concurrently \"npm start --workspace=server\" \"npm run preview --workspace=client\""
    },
    "devDependencies": {
      "concurrently": "^8.2.1"
    }
  }